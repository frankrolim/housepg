<div class="container">

  <h1>Movies</h1>
  <%= link_to 'New Movie', new_movie_path, class: "btn btn-primary" %>
  <br>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th></th>
        <th>#</th>
        <th>Title</th>
        <th>Plot</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= image_tag movie.poster_url, height: "100px" %></td>
          <td><%= movie.id %></td>
          <td><%= movie.title %></td>
          <td><small><%= truncate(movie.plot, length: 200) %></small></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to '<i class="fa fa-eye"></i>'.html_safe, movie, class: "btn btn-small btn-secondary" %>
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_movie_path(movie), class: "btn btn-small btn-secondary" %>
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe, movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
