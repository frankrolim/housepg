<div class="container">

  <div class="row">
    <div class="col-md-3">
      <figure class="figure">
        <img src="<%= @movie.poster_url %>" class="figure-img img-fluid rounded" alt="<%= @movie.title  %>">
      </figure>
    </div>
    <div class="col-md-9">

      <dl>
        <dt>Evento</dt>
        <dd><%= @movie.title %></dd>

        <dt>Data</dt>
        <dd>
          <% @movie.actors.each do |actor| %>
            <%= actor %>
            <%= ", ".html_safe unless actor == @movie.actors.last %>
          <% end %>
        </dd>

        <dt>Local</dt>
        <dd><%= @movie.runtime %></dd>

        <dt>Atrações</dt>
        <dd><%= @movie.genre %></dd>

        <dt><%= "Cidade" %></dt>
        <dd>
          <% @movie.directors.each do |director| %>
            <%= director %>
            <%= ", ".html_safe unless director == @movie.directors.last %>
          <% end %>
        </dd>

        <!--<dt><%= "Actor".pluralize(@movie.actors.count)%></dt>
        <dd>
          <% @movie.actors.each do |actor| %>
            <%= actor %>
            <%= ", ".html_safe unless actor == @movie.actors.last %>
          <% end %>
        </dd>

        <dt>Plot</dt>
        <dd><%= @movie.plot %></dd>

        <dt>Language</dt>
        <dd><%= @movie.language %></dd>

        <dt>Country</dt>
        <dd><%= @movie.country %></dd>

        <dt>Awards</dt>
        <dd><%= @movie.awards %></dd>-->

        <dt>Lote</dt>
        <dd><%= @movie.imdb_id %><%="° lote"%></dd>

        <dt>Valor</dt>
        <dd>
          <h4 class="card-title"> 
          <span class="badge badge-default"><%= number_to_currency(@movie.imdb_rating) %></span>
          </h4>
        </dd>

      </dl>

        <%= link_to '<i class="fa fa-cart-plus"></i> Comprar'.html_safe, add_to_cart_movie_path(@movie.id), class: "btn btn-success bt-small", remote: user_signed_in? %>

        <% if can? :manage, Movie %>
          <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-primary" %>
          <%= link_to 'List of Movies', movies_path, class: "btn btn-secondary" %>
        <% end %>
    </div>
  </div>


</div>
