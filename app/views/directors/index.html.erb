<div class="container">

  <h1>Directors</h1>

  <%= link_to 'New director', new_director_path, class: "btn btn-primary" %>
  <br>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Some movies</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @directors.each do |director| %>
        <tr>
          <td><%= director.name %></td>
          <td><%= director.movies.sample(3).join ", " %></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to '<i class="fa fa-eye"></i>'.html_safe, director, class: "btn btn-small btn-secondary" %>
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_director_path(director), class: "btn btn-small btn-secondary" %>
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe, director, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
