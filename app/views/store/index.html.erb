
<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">A melhor balada da região!</h1>
    <p class="lead text-muted">Compre seu ingresso para o House Cafe Club.</p>
    <p>
      <% if user_signed_in? %>
        Olá <strong><%= current_user.email %></strong>!
      <% else %>
        <%= link_to "Faça seu cadastro", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Já sou usuário", new_user_session_path, class: "btn btn-secondary" %>
      <% end %>
    </p>
  </div>
</section>


<div class="container">
  <h2>Eventos disponíveis:</h2>

  <%= render partial: "movies/movies", locals: {movies: @movies} %>
</div>
