<div class="container">

  <div class="row">
    <div class="col-md-3">
      <figure class="figure">
        <img src="<%= @user.gravatar %>" class="figure-img img-fluid rounded" alt="<%= @user.name  %>">
      </figure>
    </div>
    <div class="col-md-9">

      <dl>
        <dt>Name</dt>
        <dd><%= @user.name %></dd>

        <dt>Email</dt>
        <dd><%= @user.email %></dd>

        <dt>Admin?</dt>
        <dd><%= @user.admin? ? "Yes" : "No" %></dd>

      </dl>

        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary" %>
        <%= link_to 'Back', users_path, class: "btn btn-secondary" %>
    </div>
  </div>


</div>
