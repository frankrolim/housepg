<div class="container">
  <h1>Actors</h1>

  <%= link_to 'New Actor', new_actor_path, class: "btn btn-primary" %>
  <br>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Some movies</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @actors.each do |actor| %>
        <tr>
          <td><%= actor.name %></td>
          <td><%= actor.movies.sample(3).join ", " %></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to '<i class="fa fa-eye"></i>'.html_safe, actor, class: "btn btn-small btn-secondary" %>
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_actor_path(actor), class: "btn btn-small btn-secondary" %>
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe, actor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
