
<div class="container">

  <h2>Cadastre-se</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name , :label => "Nome", required: true, autofocus: true %>
      <%= f.input :email, required: true %>
      <%= f.input :password, :label => "Senha", required: true, hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length) %>
      <%= f.input :password_confirmation, :label => "Confirmar senha", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Cadastrar" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
